<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin2.HomePage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Label Text="My Restaurant" />
      <Button x:Name="ordersButon" Text="Orders" Clicked="OnOrders" />
      <Button x:Name="newOrderButton" Text="New Order" Clicked="OnNewOrder" />
      <Button x:Name="qrCodeButton" Text="Scan QR Code" Clicked="OnQRCode" />
      <Button x:Name="reservationsButton" Text="Reservations" Clicked="OnReservations" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>